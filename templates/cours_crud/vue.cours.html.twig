{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <body class="bodyPageFormation">
    <p>Cours</p>
    <p>Langages</p>
    <article>
        {% for cour in cours %}
            <section class="cadreFormation">
                <div class="cadreCouleur1"><br></div>
                <div class="cadreDroite">
                    <p class="coursCadre">COURS</p>
                    <p>{{ cour.titreCour }}</p>
                    <img src="{{ cour.imageCour }}">
                    <img src="{{asset ('images/niveau.png')}}">
                    <p>Niveau</p>
                    <p>{{ cour.courNiveau }}</p>
                    <img src="{{asset ('images/horloge.png')}}">
                    <p>Temps</p>
                    <p>{{ cour.tempsEstimeCour }}</p>
                    <p>Synopsis</p>
                    <p>{{ cour.synopsisCour }}</p>
                </div>
            </section>
        {% endfor %}
    </article>
    </body>
    {% endblock %}